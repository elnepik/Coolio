#!/bin/bash
echo "Bruh the updates don't do anything stop it."
if [ "$1" = "update" ]
then
  curl -o /usr/local/bin/coolioupdate.sh https://raw.githubusercontent.com/elnepik/Coolio/master/coolioupdate.sh
  chmod +x /usr/local/bin/coolioupdate.sh
  bash /usr/local/bin/coolioupdate.sh
elif [ "$1" = "status" ]
then
  curl -o /usr/local/bin/latestversion https://raw.githubusercontent.com/elnepik/Coolio/master/version
  cat latestversion | read lcoolv
  echo "The latest version is $lcoolv"
  rm /usr/local/bin/latestversion
fi
